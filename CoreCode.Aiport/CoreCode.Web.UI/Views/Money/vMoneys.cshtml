@using CoreCode.Web.UI.Models.Helpers


@section pageCss{
    <link rel="stylesheet" href="~/Scripts/TableHide.css" />
}

<script src="~/environmentVariables.js"></script>
<script src="~/Scripts/Views/ControlActions.js"></script>
<script src="~/Scripts/CoreCodeScripts/Common/ControlUserActions.js"></script>
<script src="~/Scripts/Views/vMoneys.js"></script>


@{
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}
<div style="margin: 0 auto; width: 30%;">
    <h2 class="panel panel-primary">Información de precios</h2>
</div>

<div id="DropdownAndTable"style="margin: 0 auto; width: 98%";>

    @Html.GetSelectDropdown("statusFilter", "vMoneys", "MoneyStatusDropdownChange", "", "",
        new Dictionary<string, string> { { "Precios habilitados",  "true" }, { "Precios deshabilitados", "false" } })

    @Html.GetTable("tblMoney", "vMoneys", "BindFields", "", new List<string> { "IDMoney", "Origen", "Destino", "Precio" },
    new List<string> { "Código", "País Origen", "País Destino", "Precio del ticket" })

</div>


<div class="card border-secondary" style="margin: 0 auto; width: 98%";">
    <div class="card-header">
        <div class="row pull-right">
            <h5 class="col-md-6">Modificación de precios</h5>
            <div class="col-md-6">
                @Html.GetConfirmButton("btnRegisterMoney", "Create", "vMoneys", "", "Registrar")
                @Html.GetConfirmButton("btnEditMoney", "Update", "vMoneys", "", "Modificar")
                @Html.GetConfirmButton("btnDisable", "Disable", "vMoneys", "", "Deshabilitar")
                @Html.GetConfirmButton("btnEnable", "Enable", "vMoneys", "", "Habilitar")
                @Html.GetConfirmButton("btnClean", "CleanForm", "vMoneys", "", "Limpiar")


            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="bs-component">
                    <form id="frmEdition">
                        <div class="form-group col-md-4" style="display: none">
                            @Html.GetInputWithLabel("txtId", "text", "Código", "", "", "IDMoney", false)
                        </div>
                        <div class="form-group col-md-4">
                            @Html.GetInputWithLabel("txtOrigen", "text", "País origen", "", "", "Origen", true)
                        </div>
                        <div class="form-group col-md-6">
                            @Html.GetInputWithLabel("txtDestino", "text", "País destino", "", "", "Destino", true)
                        </div>
                        <div class="form-group col-md-6">
                            @Html.GetInputWithLabel("txtPrecio", "text", "Precio de ticket", "", "", "Precio", true)
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>