@using CoreCode.Web.UI.Models.Helpers


@section pageCss{
    <link rel="stylesheet" href="~/Scripts/TableHide.css" />
}


<script src="~/Scripts/Views/ControlActions.js"></script>
<script src="~/environmentVariables.js"></script>
<script src="~/Scripts/Views/vCountries.js"></script>


@{
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<div id="DropdownAndTable"style="margin: 0 auto; width: 98%";>

    @Html.GetSelectDropdown("statusFilter", "vCountries", "CategoryStatusDropdownChange", "", "",
        new Dictionary<string, string> { { "Países habilitadas",  "true" }, { "Países deshabilitadas", "false" } })

    @Html.GetTable("tblCategory", "vCountries", "BindFields", "", new List<string> { "IDCategory", "Description", "Abbreviation", "Name" },
    new List<string> { "Código", "País", "Abreviatura","Aeropuerto" })

</div>


<div class="card border-secondary" style="margin: 0 auto; width: 98%";">
    <div class="card-header">
        <div class="row pull-right">
            <h5 class="col-md-6">Modificación de país</h5>
            <div class="col-md-6">
                @Html.GetConfirmButton("btnRegisterCategory", "Create", "vCountries", "", "Registrar")
                @Html.GetConfirmButton("btnEditCategory", "Update", "vCountries", "", "Modificar")
                @Html.GetConfirmButton("btnDisable", "Disable", "vCountries", "", "Deshabilitar")
                @Html.GetConfirmButton("btnEnable", "Enable", "vCountries", "", "Habilitar")
                @Html.GetConfirmButton("btnClean", "CleanForm", "vCountries", "", "Limpiar")


            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="bs-component">
                    <form id="frmEdition">
                        <div class="form-group col-md-4">
                            @Html.GetInputWithLabel("txtId", "text", "Código", "", "", "IDCategory", false)
                        </div>
                        <div class="form-group col-md-4">
                            @Html.GetInputWithLabel("txtDescription", "text", "País", "", "", "Description", true)
                        </div>
                        <div class="form-group col-md-6">
                            @Html.GetInputWithLabel("txtAbbreviation", "text", "Abreviatura", "", "", "Abbreviation", true)
                        </div>
                        <div class="col-lg-6">
                            <p>
                                Aeropuerto
                            </p>
                            @Html.GetSelectDropdown("dropdownOriginAirport", "vCountries", "", "loadAirportDropdown", "Name",
                               new Dictionary<string, string>() {{ "Seleccione el aeropuerto:", ""}})
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>