@using CoreCode.Web.UI.Models.Helpers


@section pageCss{
    <link rel="stylesheet" href="~/Scripts/TableHide.css" />
}


<script src="~/Scripts/Views/ControlActions.js"></script>
<script src="~/Scripts/Views/vGates.js"></script>
@{
    /**/

    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<div id="DropdownAndTable" style="margin: 0 auto; width: 98%";>

    @Html.GetSelectDropdown("statusFilter","vGates", "GateStatusDropdownChange", "", "",
        new Dictionary<string, string> { { "Puertas habilitadas",  "true" }, { "Puertas deshabilitadas", "false" } })

    @Html.GetTable("tblGate", "vGates", "BindFields", "", new List<string> { "Name","IDGate", "Number" },
    new List<string> { "Aeropuertos", "Código", "# Puerta" })
</div>


<div class="card border-secondary" style="margin: 0 auto; width: 98%;">
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-8">Información de puerta</div>
            <div class="col-md-4">
                @*@Html.GetConfirmButton("btnRegisterGate", "Create", "vGates", "", "Registrar")*@
                @Html.GetConfirmButton("btnDisable", "Disable", "vGates", "", "Deshabilitar")
                @Html.GetConfirmButton("btnEnable", "Enable", "vGates", "", "Habilitar")
                @Html.GetConfirmButton("btnClean", "CleanForm", "vGates", "", "Limpiar")


            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="bs-component">
                    <form id="frmEdition">
                        <div class="form-group col-md-4">
                            @Html.GetInputWithLabel("txtId", "text", "Código", "", "", "IDGate", false)
                        </div>
                        <div class="form-group col-md-4">
                            @Html.GetInputWithLabel("nbmNumber", "number", "# Puerta", "", "", "Number", false)
                        </div>
                        <div class="form-group col-md-6">
                            @Html.GetInputWithLabel("txtIdAirport", "text", "Aeropuerto", "", "", "Name", false)
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>