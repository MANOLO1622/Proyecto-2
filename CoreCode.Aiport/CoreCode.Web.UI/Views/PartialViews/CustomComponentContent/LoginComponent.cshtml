@using CoreCode.Web.UI.Models.Helpers
<script src="~/Scripts/CoreCodeScripts/Common/LoginComponent.js"></script>
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header text-center">
                <h3 class="modal-title w-100 font-weight-bold">Inicio Sesión</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <i class="fas fa-envelope prefix grey-text mb-2" style="color: grey; font-size: 1.3em"></i>
                    <label data-error="wrong" data-success="right" for="defaultForm-email">Correo electrónico</label>
                    <input type="text" id="userName" class="form-control validate mb-2">
                </div>

                <div class="md-form mb-4">
                    <i class="fas fa-lock prefix grey-text mb-2" style="color: grey; font-size: 1.3em"></i>
                    <label data-error="wrong" data-success="right" for="defaultForm-pass">Contraseña</label>
                    <input type="password" id="loginPassword" class="form-control validate mb-2">

                    @Html.GetButton("loginButton", "loginEvent", "LoginComponent", string.Empty, "btn", "btn btn-outline-success btn-lg btn-block", "Iniciar Sesión")
                    @*@Html.GetButton("btnRecover", "recoverPasswordEvent", "LoginComponent", string.Empty, "btn", "btn btn-link", "Recuperar Contraseña")*@
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">

               <span>¿No tienes cuenta?</span> <a class="btn btn-link" href="#" id="session-label-link" data-toggle="modal" data-target="#usersModal"> Registrar aquí</a>


            </div>
        </div>
    </div>
</div>

