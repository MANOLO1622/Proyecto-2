@using CoreCode.Web.UI.Models.Helpers

<script src="~/Scripts/Views/ControlActions.js"></script>
<script src="~/Scripts/Views/vFlight.js"></script>
<script src="~/environmentVariables.js"></script>
@{
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}
<div style="margin: 0 auto; width: 30%;">
    <h2 class="panel panel-primary">Información de vuelo</h2>
</div>
<div id="DropdownAndTable" style="margin: 0 auto; width: 98%" ;>

    @Html.GetSelectDropdown("statusFilter","vFlight", "FlightStatusDropdownChange", "", "",
        new Dictionary<string, string> { { "Vuelos a tiempo",  "a tiempo" }, { "Vuelos cancelados", "cancelado"}, { "Vuelos retrasados", "retrasado" } })

    @Html.GetTable("tblFlights", "vFlight", "BindFields", "", new List<string> { "Id", "Airline_Id", "Origin_Airport_Name", "Destiny_Airport_Name", "Departure_Time", "Arrival_DateTime", "Id_Airplane", "Id_Gate" }, new List<string> { "Id", "Aerolinea", "Aeropuerto Origen", "Aeropuerto Destino", "Tiempo de salida", "Tiempo de llegada","Empresa del Avión", "Puerta" })
</div>
<div class="card border-secondary" style="margin-top: 50px; margin: 0 auto; width: 98%;">
    <div class="card-header">
        <div class="row pull-right">
            @*<h5 class="col-md-10">Información de vuelo</h5>*@
            <div class="col-md-8">
                @Html.GetConfirmButton("btnRegisterFlight", "Create", "vFlight", "", "Registrar")
                
                @Html.GetButton("btnEditFlight", "Update", "vFlight", "", "hidden btn btn-outline-success", "", "Modificar")
                @*@Html.GetConfirmButton("btnCancel", "Cancel", "vFlight", "", "Cancelar")*@
                @*@Html.GetConfirmButton("btnClean", "CleanForm", "vFlight", "", "Limpiar")*@
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">
                    <form id="frmEdition">
                        <div style="margin: 0 auto; width: 25%;">
                            
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                @Html.GetInputWithLabel("txtId", "text", "", "", "Ingrese el código: ", "Id", true)
                            </div>
                            <div class="form-group col-md-4">
                                @Html.GetSelectDropdown("dropdownAirline", "vFlight", "", "loadAirlineDropdown", "Airline_Id",
                                    new Dictionary<string, string>() {{"Seleccione la aerolínea:", ""}})
                            </div>

                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                @Html.GetSelectDropdown("dropdownOriginAirport", "vFlight", "", "", "Origin_Airport_Id",
                                    new Dictionary<string, string>() {{"Seleccione aeropuerto origen:", ""}})
                            </div>

                            <div class="form-group col-md-4">
                                @Html.GetInputWithLabel("txtDeparture_Time", "datetime-local", "Fecha de Salida", "", "Ingrese la fecha de salida: ", "Departure_Time", true)
                            </div>
                            <div class="form-group col-md-4">
                                @Html.GetSelectDropdown("dropdownGate", "vFlight", "", "loadGateDropdown", "Id_Gate",
                                    new Dictionary<string, string>() {{"Seleccione  la puerta:", ""}})
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                @Html.GetSelectDropdown("dropdownDestinyAirport", "vFlight", "", "loadAirportDropdown", "Destiny_Airport_Id",
                                    new Dictionary<string, string>() {{"Seleccione aeropuerto destino:", ""}})
                            </div>
                            <div class="form-group col-md-4">
                                @Html.GetInputWithLabel("txtArrival_Time", "datetime-local", "Fecha de Llegada", "", "Ingrese la fecha de llegada: ", "Arrival_DateTime", true)
                            </div>
                            <div class="form-group col-md-4">
                                @Html.GetSelectDropdown("dropdownAirplane", "vFlight", "", "loadAirplaneDropdown", "Id_Airplane",
                                    new Dictionary<string, string>() {{"Seleccione el avión:", ""}})
                            </div>
                            <div class="form-group col-md-5">
                                @Html.GetSelectDropdown("txtStatus", "", "", "", "", new Dictionary<string, string>()
                                {
                                    {"A Tiempo", "a tiempo"},
                                    {"Cancelado", "cancelado"},
                                    {"Retrasado", "retrasado"}
                                }, "hidden")
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>