@section pageCss
{
    <link href="~/Content/Dashboard.css" rel="stylesheet" />
    <style>


        html, body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Open Sans","Helvetica Neue",Helvetica,Arial,sans-serif
        }

        /*Store Card*/
        .store-card-header {
            background-color: #5D5D5D;
            color: white;
        }

        .store-card {
            border: 1px solid #8B8B8B;
        }
        /*End Store Cards*/
        .scoreImage {
            width: 100%;
        }

        #scoreCard-template {
            display: none;
        }

        .scoreTitle {
            font-weight: bold;
        }

        .scoreCard {
            border: 1px solid black;
            width: 20%;
        }

        .skeleton-triple {
            float: left;
            margin: 20px 6%;
        }

        .skeleton-middle {
            margin: 0 auto;
            width: 30%;
        }

        .skeleton-single-line {
            width: 75%;
            margin: 20px auto;
        }
    </style>
}
@section headerScripts
{
    <script src="~/Scripts/GoogleCharts.js"></script>
