@{
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}
<main id="main-dashboard-right-container" class="main">
    <div id="report-dashboard" class="reports-dashboard currentShownSlide">
        <div class="main-header main-header-airlineAdmin">
            <div class="main-header__intro-wrapper">
                <div class="main-header__welcome">
                    <div class="main-header__welcome-title text-light"><strong id="airlineNameHeader"></strong></div>
                    @*<div class="main-header__welcome-subtitle text-light">How are you today?</div>*@
                </div>
            </div>
        </div>
        <div class="main-overview">
        </div> <!-- /.main__overview -->
        <div class="main__cards">
            <div class="card">
                <div class="card__header">
                    <div class="card__header-title text-light">
                        <a>Ofertas</a>
                    </div>
                </div>
                <div class="card__main">
                    <div class="card__row">
                        <div class="card__icon"><i class="fas fa-building"></i></div>
                        <div class="card__time">
                            <div>Lunes</div>
                        </div>
                        <div class="card__detail">
                            <div class="card__source text-bold">Hotel Continental Resort</div>
                            <div class="card__description">2 personas una noche todo incluido $110</div>
                            <div class="card__note">Diciembre 2019 / Ven. 31/12/2019</div>
                        </div>
                    </div>
                    <div class="card__row">
                        <div class="card__icon"><i class="fas fa-plane"></i></div>
                        <div class="card__time">
                            <div>Martes</div>
                        </div>
                        <div class="card__detail">
                            <div class="card__source text-bold">México, Cancun</div>
                            <div class="card__description">Ticketes 2 x 1 por solo $200</div>
                            <div class="card__note">Noviembre 2019 / Ven. 30/11/2019</div>
                        </div>
                    </div>
                    <div class="card__row">
                        <div class="card__icon"><i class="fas fa-glass-cheers"></i></div>
                        <div class="card__time">
                            <div>Miercoles</div>
                        </div>
                        <div class="card__detail">
                            <div class="card__source text-bold">Rest. Hilton Dux</div>
                            <div class="card__description">Platillo principal con %50 de descuento</div>
                            <div class="card__note">Octubre 2019 / Venc. 10/10/2019 a las 7:30pm</div>
                        </div>
                    </div>
                    <div class="card__row">
                        <div class="card__icon"><i class="fas fa-tram"></i></div>
                        <div class="card__time">
                            <div>Jueves</div>
                        </div>
                        <div class="card__detail">
                            <div class="card__source text-bold">Viaje turistico</div>
                            <div class="card__description">$25 por persona por todo Perú.</div>
                            <div class="card__note">Noviembre 2019 / Ven. 11/11/2019</div>
                        </div>
                    </div>
                    <div class="card__row">
                        <div class="card__icon"><i class="fas fa-skiing"></i></div>
                        <div class="card__time">
                            <div>Viernes</div>
                        </div>
                        <div class="card__detail">
                            <div class="card__source text-bold">Tour de ski</div>
                            <div class="card__description">$15 la hora en canada</div>
                            <div class="card__note">Diciembre 2019 / Ven. 25/12/2019</div>
                        </div>
                    </div>
                </div>
            </div>
            @*----------------------Fin Ofertas--------------------------------------*@
            <div class="card">
                <div class="card__header">
                    <div class="card__header-title text-light">
                        <a>Viajes</a>
                    </div>
                </div>
                <div class="card">
                    <div class="documents">
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Carousel indicators -->
                            
                            <!-- Wrapper for carousel items -->
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="https://image.freepik.com/vector-gratis/vacaciones-verano-vacaciones-playa-banner-turismo-aislado-ilustracion-vectorial_1284-2598.jpg" alt="First Slide">
                                </div>
                                <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                </a>
                                <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                </a>
                                <div class="carousel-item">
                                    <img src="http://archivo.giganet.com.ar/ofertas/20160523-tiptravel/rio-de-janeiro-buzios.jpg" alt="Second Slide">
                                </div>
                                <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                </a>
                                <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                </a>
                                <div class="carousel-item">
                                    <img src="https://image.freepik.com/vector-gratis/todo-mundo-agencia-viajes-banners-horizontales_1284-13910.jpg" alt="Third Slide">
                                </div>
                                <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                </a>
                                <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                </a>
                                <ol class="carousel-indicators">
                                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                    <li data-target="#myCarousel" data-slide-to="1"></li>
                                    <li data-target="#myCarousel" data-slide-to="2"></li>
                                </ol>
                            </div>
                            <!-- Carousel controls -->
                            
                            
                        </div>
                    </div>
                </div>
            </div>
            
        </div> <!-- /.main-cards -->

    </div>
</main>


@section pageCss
{
    <link href="~/Content/Dashboard.css" rel="stylesheet" />
    <style>


        html, body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Open Sans","Helvetica Neue",Helvetica,Arial,sans-serif
        }

        /*Store Card*/
        .store-card-header {
            background-color: #5D5D5D;
            color: white;
        }

        .store-card {
            border: 1px solid #8B8B8B;
        }
        /*End Store Cards*/
        .scoreImage {
            width: 100%;
        }

        #scoreCard-template {
            display: none;
        }

        .scoreTitle {
            font-weight: bold;
        }

        .scoreCard {
            border: 1px solid black;
            width: 20%;
        }

        .skeleton-triple {
            float: left;
            margin: 20px 6%;
        }

        .skeleton-middle {
            margin: 0 auto;
            width: 30%;
        }

        .skeleton-single-line {
            width: 75%;
            margin: 20px auto;
        }
    </style>
}
@section headerScripts
{
    <script src="~/Scripts/GoogleCharts.js"></script>
}

@section scripts{
    <script src="~/Scripts/Views/ControlActions.js"></script>
    <script src="~/Scripts/CoreCodeScripts/Dashboard.js"></script>
}