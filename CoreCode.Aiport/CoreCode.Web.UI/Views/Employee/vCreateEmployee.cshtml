@using CoreCode.Web.UI.Models.Helpers

@section pageCss{
    <link rel="stylesheet" href="~/Scripts/TableHide.css" />
}

    
<script src="~/environmentVariables.js"></script>
<script src="~/Scripts/Views/ControlActions.js"></script>
<script src="~/Scripts/CoreCodeScripts/Common/ControlUserActions.js"></script>
<script src="~/Scripts/Views/vCreateEmployee.js"></script>

@{
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}
<form id="frmCreateEmployee" class="main-right-content-container">
    <div style="margin: 0 auto; width: 40%;">
        <h2>Registro de empleados</h2>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtId", "text", "Cédula*", "form-control", "Ingrese # de identificación", "ID", true)
        </div>
        <div class="col-md-6">
            @Html.GetInputWithLabel("txtEmail", "email", "Correo electrónico*", "form-control", "(Obligatorio)", "Email", true)
        </div>
    </div>
    <div class="row">

        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtFirstName", "text", "Primer nombre*", "form-control", "(Obligatorio)", "FirstName", true)
        </div>
        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtFirstLastName", "text", "Primer apellido*", "form-control", "(Obligatorio) ", "FirstLastName", true)
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtSecondName", "text", "Segundo nombre", "form-control", "(Opcional)", "SecondName", false)
        </div>
        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtSecondLastName", "text", "Segundo apellido", "form-control", "(Opcional)", "SecondLastName", false)
        </div>

    </div>
    <div class="row">
        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtBirthDate", "date", "Fecha de nacimiento*", "form-control", "Detalle", "BirthDate", true)
            <label>   *Usuario tiene que ser mayor de edad</label>
        </div>
        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtPhone", "tel", "Teléfono*", "form-control", "(Obligatorio)", "Phone", true)
        </div>
        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtExperience", "text", "Años de experiencia*", "form-control", "(Obligatorio)", "Experience", true)
        </div>
        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtGraduationYear", "date", "Fecha de graduación*", "form-control", "Detalle", "GraduationYear", true)
        </div>
        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtLicense", "text", "Número de licencia o autorización*", "form-control", "(Obligatorio)", "License", true)
        </div>

        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtNationality", "text", "Nacionalidad*", "form-control", "(Obligatorio)", "Nationality", true)
        </div>

        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtProvince", "text", "Provincia*", "form-control", "(Obligatorio)", "Province", true)
        </div>
        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtCanton", "text", "Canton*", "form-control", "(Obligatorio)", "Canton", true)
        </div>
        <div class="form-group col-md-6">
            @Html.GetInputWithLabel("txtDistrict", "text", "Distrito*", "form-control", "(Obligatorio)", "District", true)
        </div>


        <div class="form-group col-md-6">
            <label for="selectPut">Puesto*</label>
            <select class="form-control" id="selectPut" columnDataName="Put" required>
                <option value="">Seleccione opción (Obligatorio)</option>
                <option value="asistentedevuelo">Asistente de vuelo</option>
                <option value="piloto">Piloto/a</option>
                <option value="copiloto">Copiloto/a</option>
            </select>
        </div>


    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label for="selectCivilStatus">Estado civil*</label>
            <select class="form-control" id="selectCivilStatus" columnDataName="CivilStatus" required>
                <option value="">Seleccione opción (Obligatorio)</option>
                <option value="casado">Casado/a</option>
                <option value="soltero">Soltero/a</option>
                <option value="union-libre">Unión libre</option>
            </select>
            @*@Html.GetSelectDropdown("selectCivilStatus","vCreateAirportAdmin", "",
                new Dictionary<string, string> { { "Casado",  "casado" }, { "Soltero", "soltero" },{"Otro", "otro" } })*@
        </div>
        <div class="form-group col-md-6">
            <label for="selectGenre">Género*</label>
            <select class="form-control" columnDataName="Genre" id="selectGenre" required>
                <option value="">Seleccione opción (Obligatorio)</option>
                <option value="masculino">Masculino</option>
                <option value="femenino">Femenino</option>
                <option value="otro">Otro</option>
            </select>
            @*@Html.GetSelectDropdown("selectGenre","vCreateAirportAdmin", "",
                new Dictionary<string, string> { { "Femenino",  "femenino" }, { "Masculino", "masculino" },{"Otro", "otro" } })*@
        </div>
    </div>
    <div class="form-group col-md-6">
        <p>
            Aerolínea
        </p>
        @Html.GetSelectDropdown("dropdownOriginAirline", "vCreateEmployee", "", "loadAirlineDropdown", "Id_Airline",
           new Dictionary<string, string>() {{ "Seleccione la aerolínea:", ""}})
    </div>
</form>
<form class="main-right-content-container">

    <div id="btnControl">
        @Html.GetConfirmButton("btnRegister", "Create", "vCreateEmployee", "", "Registrar")
        @Html.GetConfirmButton("btnControl", "CleanForm", "vCreateEmployee", "", "Limpiar")
    </div>
</form>
